<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#4F46E5">
    <title>Transactions - Expense Tracker</title>

    <!-- PWA Meta Tags -->
    <meta name="description" content="Track your expenses with Goal, Need, Want categorization">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Expense Tracker">
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/svg+xml" href="/icons/icon.svg">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Alpine.js CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        /* Custom styles for smooth mobile experience */
        body {
            padding-bottom: 80px; /* Space for bottom nav */
            padding-top: 0; /* No header */
        }

        /* Hide scrollbar but keep functionality */
        ::-webkit-scrollbar {
            display: none;
        }

        /* Smooth transitions */
        * {
            transition: all 0.2s ease;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased">

    <!-- Main Content -->
    <main class="max-w-2xl mx-auto px-4 py-6">

        <!-- Month Navigation Card -->
        <div class="mb-6">
            <div class="bg-white rounded-lg shadow-sm p-4">
                <div class="flex items-center justify-between">
                    <!-- Previous Month Button -->
                    <%
                    const prevMonth = selectedMonth === 0 ? 11 : selectedMonth - 1;
                    const prevYear = selectedMonth === 0 ? selectedYear - 1 : selectedYear;
                    %>
                    <a href="<%= baseURL %>/expenses?month=<%= prevMonth %>&year=<%= prevYear %>"
                       class="p-2 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded-lg active:scale-95">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                    </a>

                    <!-- Current Month Display -->
                    <div class="text-center">
                        <p class="text-lg font-bold text-gray-900">
                            <%= ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'][selectedMonth] %> <%= selectedYear %>
                        </p>
                        <p class="text-xs text-gray-500 mt-1"><%= expenses.length %> transaction<%= expenses.length !== 1 ? 's' : '' %></p>
                    </div>

                    <!-- Next Month Button -->
                    <%
                    const nextMonth = selectedMonth === 11 ? 0 : selectedMonth + 1;
                    const nextYear = selectedMonth === 11 ? selectedYear + 1 : selectedYear;
                    const now = new Date();
                    const isCurrentMonth = selectedMonth === now.getMonth() && selectedYear === now.getFullYear();
                    const isFutureMonth = selectedYear > now.getFullYear() || (selectedYear === now.getFullYear() && selectedMonth > now.getMonth());
                    %>
                    <% if (!isFutureMonth) { %>
                        <a href="<%= baseURL %>/expenses?month=<%= nextMonth %>&year=<%= nextYear %>"
                           class="p-2 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded-lg active:scale-95">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    <% } else { %>
                        <div class="p-2 w-10"></div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Monthly Total Card -->
        <div class="mb-6">
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg shadow-md p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Total Spent</p>
                <p class="text-4xl font-bold">$<%= monthlyTotal.toFixed(2) %></p>
            </div>
        </div>

        <% if (expenses && expenses.length > 0) { %>
            <!-- Expense List -->
            <div class="space-y-3">
                <% for (const expense of expenses) { %>
                    <div class="bg-white rounded-lg shadow-sm p-4 hover:shadow-md active:scale-98">
                        <div class="flex items-center justify-between">
                            <!-- Amount -->
                            <div class="flex-1">
                                <p class="text-2xl font-bold text-gray-900">$<%= expense.value %></p>
                                <div class="flex items-center gap-2 mt-1">
                                    <p class="text-sm text-gray-500">
                                        <%= new Date(expense.expenseDate).toLocaleDateString('en-US', {
                                            month: 'short',
                                            day: 'numeric',
                                            year: 'numeric'
                                        }) %>
                                    </p>
                                    <% if (expense.category) { %>
                                        <span class="text-gray-400">‚Ä¢</span>
                                        <span class="text-xs font-medium text-gray-600">
                                            <%= expense.category %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>

                            <!-- GNW Badge -->
                            <div class="flex items-center gap-2">
                                <% if (expense.gnw === 'Goal') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-700 border border-purple-300">
                                        üéØ Goal
                                    </span>
                                <% } else if (expense.gnw === 'Need') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700 border border-green-300">
                                        ‚úÖ Need
                                    </span>
                                <% } else if (expense.gnw === 'Want') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-pink-100 text-pink-700 border border-pink-300">
                                        ‚ù§Ô∏è Want
                                    </span>
                                <% } %>

                                <!-- Edit Button -->
                                <a href="<%= baseURL %>/expenses/<%= expense._id %>/edit"
                                   class="p-2 text-gray-400 hover:text-indigo-600 active:scale-95">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Description (if exists) -->
                        <% if (expense.description) { %>
                            <p class="mt-2 text-sm text-gray-600"><%= expense.description %></p>
                        <% } %>
                    </div>
                <% } %>
            </div>

        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-12">
                <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No expenses this month</h3>
                <p class="text-gray-500 mb-6">Start tracking your spending by adding your first expense</p>
                <a href="<%= baseURL %>/addexpense"
                   class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg shadow-md hover:bg-indigo-700 active:scale-95">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add Expense
                </a>
            </div>
        <% } %>

    </main>

    <!-- Bottom Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 safe-area-inset-bottom z-50">
        <div class="max-w-2xl mx-auto px-4">
            <div class="flex items-center justify-around py-3">

                <!-- Transactions Tab (Active) -->
                <a href="<%= baseURL %>/expenses"
                   class="flex flex-col items-center gap-1 text-indigo-600 font-medium">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                    </svg>
                    <span class="text-xs">Transactions</span>
                </a>

                <!-- Add Expense Tab -->
                <a href="<%= baseURL %>/addexpense"
                   class="flex flex-col items-center gap-1 -mt-6">
                    <div class="bg-indigo-600 text-white p-4 rounded-full shadow-lg hover:bg-indigo-700 active:scale-95">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <span class="text-xs text-gray-600 mt-1">Add</span>
                </a>

                <!-- Analytics Tab -->
                <a href="<%= baseURL %>/analytics"
                   class="flex flex-col items-center gap-1 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    <span class="text-xs">Analytics</span>
                </a>

            </div>
        </div>
    </nav>

    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered:', registration);
                    })
                    .catch((error) => {
                        console.log('SW registration failed:', error);
                    });
            });
        }
    </script>

</body>
</html>
