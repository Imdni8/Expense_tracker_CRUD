<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#4F46E5">
    <title>Transactions - Expense Tracker</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Alpine.js CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        /* Custom styles for smooth mobile experience */
        body {
            padding-bottom: 80px; /* Space for bottom nav */
        }

        /* Hide scrollbar but keep functionality */
        ::-webkit-scrollbar {
            display: none;
        }

        /* Smooth transitions */
        * {
            transition: all 0.2s ease;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased">

    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-2xl mx-auto px-4 py-4">
            <h1 class="text-2xl font-bold text-gray-900">Transactions</h1>
            <p class="text-sm text-gray-500">Track your spending</p>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-2xl mx-auto px-4 py-6">

        <% if (expenses && expenses.length > 0) { %>
            <!-- Expense List -->
            <div class="space-y-3">
                <% for (const expense of expenses) { %>
                    <div class="bg-white rounded-lg shadow-sm p-4 hover:shadow-md active:scale-98">
                        <div class="flex items-center justify-between">
                            <!-- Amount -->
                            <div class="flex-1">
                                <p class="text-2xl font-bold text-gray-900">$<%= expense.value %></p>
                                <p class="text-sm text-gray-500 mt-1">
                                    <%= new Date(expense.expenseDate).toLocaleDateString('en-US', {
                                        month: 'short',
                                        day: 'numeric',
                                        year: 'numeric'
                                    }) %>
                                </p>
                            </div>

                            <!-- GNW Badge -->
                            <div class="flex items-center gap-2">
                                <% if (expense.gnw === 'Goal') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-700 border border-purple-300">
                                        üéØ Goal
                                    </span>
                                <% } else if (expense.gnw === 'Need') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700 border border-green-300">
                                        ‚úÖ Need
                                    </span>
                                <% } else if (expense.gnw === 'Want') { %>
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-pink-100 text-pink-700 border border-pink-300">
                                        ‚ù§Ô∏è Want
                                    </span>
                                <% } %>

                                <!-- Edit Button -->
                                <a href="<%= baseURL %>/expenses/<%= expense._id %>/edit"
                                   class="p-2 text-gray-400 hover:text-indigo-600 active:scale-95">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Category Badge (if exists) -->
                        <% if (expense.category) { %>
                            <div class="mt-2">
                                <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">
                                    <%= expense.category %>
                                </span>
                            </div>
                        <% } %>

                        <!-- Description (if exists) -->
                        <% if (expense.description) { %>
                            <p class="mt-2 text-sm text-gray-600"><%= expense.description %></p>
                        <% } %>
                    </div>
                <% } %>
            </div>

        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-12">
                <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No expenses yet</h3>
                <p class="text-gray-500 mb-6">Start tracking your spending by adding your first expense</p>
                <a href="<%= baseURL %>/addexpense"
                   class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg shadow-md hover:bg-indigo-700 active:scale-95">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add Expense
                </a>
            </div>
        <% } %>

    </main>

    <!-- Bottom Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 safe-area-inset-bottom z-50">
        <div class="max-w-2xl mx-auto px-4">
            <div class="flex items-center justify-around py-3">

                <!-- Transactions Tab (Active) -->
                <a href="<%= baseURL %>/expenses"
                   class="flex flex-col items-center gap-1 text-indigo-600 font-medium">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                    </svg>
                    <span class="text-xs">Transactions</span>
                </a>

                <!-- Add Expense Tab -->
                <a href="<%= baseURL %>/addexpense"
                   class="flex flex-col items-center gap-1 -mt-6">
                    <div class="bg-indigo-600 text-white p-4 rounded-full shadow-lg hover:bg-indigo-700 active:scale-95">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <span class="text-xs text-gray-600 mt-1">Add</span>
                </a>

                <!-- Analytics Tab -->
                <a href="<%= baseURL %>/analytics"
                   class="flex flex-col items-center gap-1 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    <span class="text-xs">Analytics</span>
                </a>

            </div>
        </div>
    </nav>

</body>
</html>
