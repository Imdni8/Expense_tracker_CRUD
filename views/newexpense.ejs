<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#4F46E5">
    <title>Add Expense - Expense Tracker</title>

    <!-- PWA Meta Tags -->
    <meta name="description" content="Track your expenses with Goal, Need, Want categorization">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Expense Tracker">
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/svg+xml" href="/icons/icon.svg">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Alpine.js CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        /* Custom styles for smooth mobile experience */
        body {
            padding-bottom: 80px; /* Space for bottom nav */
        }

        /* Smooth transitions */
        * {
            transition: all 0.2s ease;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased">

    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-2xl mx-auto px-4 py-4 flex items-center gap-3">
            <a href="<%= baseURL %>/expenses"
               class="p-2 -ml-2 text-gray-400 hover:text-gray-600 active:scale-95">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Add Expense</h1>
                <p class="text-sm text-gray-500">Track your spending</p>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-2xl mx-auto px-4 py-6">

        <form action="<%= baseURL %>/addexpense" method="POST" class="space-y-6" x-data="{ selectedGNW: 'Need' }">

            <!-- Amount Field -->
            <div>
                <label for="value" class="block text-sm font-medium text-gray-700 mb-2">
                    Amount *
                </label>
                <div class="relative">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-lg">$</span>
                    <input type="number"
                           id="value"
                           name="value"
                           step="0.01"
                           required
                           placeholder="0.00"
                           class="w-full pl-10 pr-4 py-4 text-lg border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-0 transition-colors">
                </div>
            </div>

            <!-- Date Field -->
            <div>
                <label for="expenseDate" class="block text-sm font-medium text-gray-700 mb-2">
                    Date
                </label>
                <input type="date"
                       id="expenseDate"
                       name="expenseDate"
                       class="w-full px-4 py-4 text-lg border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-0 transition-colors">
                <p class="text-xs text-gray-500 mt-1">Leave blank to use today's date</p>
            </div>

            <!-- GNW Toggle Buttons -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">
                    Tag as *
                </label>
                <div class="grid grid-cols-3 gap-3">
                    <!-- Goal Button -->
                    <button type="button"
                            @click="selectedGNW = 'Goal'"
                            :class="selectedGNW === 'Goal' ? 'bg-purple-100 border-purple-500 text-purple-700 ring-2 ring-purple-500' : 'bg-white border-gray-200 text-gray-700'"
                            class="flex flex-col items-center gap-2 p-4 border-2 rounded-lg active:scale-95 transition-all">
                        <span class="text-2xl">ğŸ¯</span>
                        <span class="text-sm font-semibold">Goal</span>
                    </button>

                    <!-- Need Button -->
                    <button type="button"
                            @click="selectedGNW = 'Need'"
                            :class="selectedGNW === 'Need' ? 'bg-green-100 border-green-500 text-green-700 ring-2 ring-green-500' : 'bg-white border-gray-200 text-gray-700'"
                            class="flex flex-col items-center gap-2 p-4 border-2 rounded-lg active:scale-95 transition-all">
                        <span class="text-2xl">âœ…</span>
                        <span class="text-sm font-semibold">Need</span>
                    </button>

                    <!-- Want Button -->
                    <button type="button"
                            @click="selectedGNW = 'Want'"
                            :class="selectedGNW === 'Want' ? 'bg-pink-100 border-pink-500 text-pink-700 ring-2 ring-pink-500' : 'bg-white border-gray-200 text-gray-700'"
                            class="flex flex-col items-center gap-2 p-4 border-2 rounded-lg active:scale-95 transition-all">
                        <span class="text-2xl">â¤ï¸</span>
                        <span class="text-sm font-semibold">Want</span>
                    </button>
                </div>
                <!-- Hidden input to submit selected GNW -->
                <input type="hidden" name="gnw" :value="selectedGNW">
            </div>

            <!-- Category Dropdown -->
            <div>
                <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
                    Category (optional)
                </label>
                <select id="category"
                        name="category"
                        class="w-full px-4 py-4 text-lg border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-0 transition-colors bg-white">
                    <option value="">-- No Category --</option>
                    <option value="Groceries">ğŸ›’ Groceries</option>
                    <option value="Transport">ğŸš— Transport</option>
                    <option value="Entertainment">ğŸ¬ Entertainment</option>
                    <option value="Bills & Utilities">ğŸ’° Bills & Utilities</option>
                    <option value="Shopping">ğŸ›ï¸ Shopping</option>
                    <option value="Food & Dining">ğŸ• Food & Dining</option>
                    <option value="Health & Fitness">ğŸ¥ Health & Fitness</option>
                    <option value="Home & Garden">ğŸ  Home & Garden</option>
                    <option value="Travel">âœˆï¸ Travel</option>
                    <option value="Education">ğŸ“š Education</option>
                    <option value="Work">ğŸ’¼ Work</option>
                    <option value="Gifts">ğŸ Gifts</option>
                    <option value="Subscriptions">ğŸ“± Subscriptions</option>
                    <option value="Other">ğŸ”§ Other</option>
                </select>
            </div>

            <!-- Description Field -->
            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                    Description (optional)
                </label>
                <textarea id="description"
                          name="description"
                          rows="3"
                          placeholder="Add a note about this expense..."
                          class="w-full px-4 py-3 text-base border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-0 transition-colors resize-none"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
                <button type="submit"
                        class="w-full bg-indigo-600 text-white font-semibold py-4 px-6 rounded-lg shadow-md hover:bg-indigo-700 active:scale-98 transition-all">
                    Add Expense
                </button>
            </div>

        </form>

    </main>

    <!-- Bottom Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 safe-area-inset-bottom z-50">
        <div class="max-w-2xl mx-auto px-4">
            <div class="flex items-center justify-around py-3">

                <!-- Transactions Tab -->
                <a href="<%= baseURL %>/expenses"
                   class="flex flex-col items-center gap-1 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-xs">Transactions</span>
                </a>

                <!-- Add Expense Tab (Active) -->
                <a href="<%= baseURL %>/addexpense"
                   class="flex flex-col items-center gap-1 -mt-6">
                    <div class="bg-indigo-600 text-white p-4 rounded-full shadow-lg">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <span class="text-xs text-indigo-600 font-medium mt-1">Add</span>
                </a>

                <!-- Analytics Tab -->
                <a href="<%= baseURL %>/analytics"
                   class="flex flex-col items-center gap-1 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    <span class="text-xs">Analytics</span>
                </a>

            </div>
        </div>
    </nav>

    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered:', registration);
                    })
                    .catch((error) => {
                        console.log('SW registration failed:', error);
                    });
            });
        }
    </script>

</body>
</html>
